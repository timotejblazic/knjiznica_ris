@model IEnumerable<web.Models.Nakup>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DatumNakupa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uporabnik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatumNakupa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uporabnik.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NakupID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NakupID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NakupID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
