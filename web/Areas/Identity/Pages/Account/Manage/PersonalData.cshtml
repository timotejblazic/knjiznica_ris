@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Osebni podatki";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Vaš račun vsebuje osebne podatke, ki ste nam jih dali. Ta stran vam omogoči izbris in naložitev.</p>
        <p>
            <strong>Izbris teh podatkov bo za vedno izbrisalo vaš račun.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">Naloži</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Izbriši</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
